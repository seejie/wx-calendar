<view class="form-panel">
  <view class="title">{{ title }}</view>
  <view class="tags">
    <view 
      wx:for="{{ list }}"  
      wx:key="unique"
      class="tag {{item.selected ? 'selected' : ''}}"
      data-selected="{{ item.selected }}"
      data-idx="{{ index }}"
      bindtap="onselected"
    >{{ item.val }}</view>
  </view>
</view>
